<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Shanti" 
    android:orientation="vertical"
    android:weightSum="8">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_gravity="top"
       android:layout_weight="3"
       android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="152dp"
            android:contentDescription="@+string/TODO"
            android:src="@drawable/stupa" />
			
   </LinearLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_gravity="center"
       android:layout_weight="4"
       android:orientation="vertical" >
        <ScrollView
       android:id="@+id/scrollView1"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       >
        
       <TextView
               android:id="@+id/textView1"
               android:layout_width="match_parent"
               android:layout_height="3384dp"
               android:text="@string/santi"
               android:color="#4A789C" />
       </ScrollView>
        </LinearLayout>
 
   
  <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_gravity="top"
       android:layout_weight="1"
       android:orientation="horizontal" >
    <Button 
        android:id="@+id/getmap"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="@string/getmap"/>
    <Button
        android:id="@+id/dirmap" 
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/showdir"/>
    
    </LinearLayout>

       
        
 
   
   
        
   

</LinearLayout>